{
  "name": "dcrwalletgui-grpc",
  "version": "0.1.0",
  "description": "dcrwalletgui grpc-web PoC",
  "license": "ISC",
  "dependencies": {
    "google-protobuf": "^3.6.1",
    "grpc-web": "^1.0.0"
  },
  "devDependencies": {
    "browserify": "^16.2.2",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.7"
  },
  "scripts": {
    "start": "webpack-dev-server --progress --colors  --https --cert=certs/localhost.pem --key=certs/localhost.key --config ./webpack.config.js",
    "proto": "protoc -I=./proto proto/api.proto   --js_out=import_style=commonjs,binary:./proto && protoc -I=./proto proto/api.proto   --grpc-web_out=import_style=commonjs,mode=grpcwebtext:./proto"
  }
}
